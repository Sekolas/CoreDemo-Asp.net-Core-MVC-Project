@model Writer


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script type="text/javascript" src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="c:\users\asus\source\repos\coredemo\coredemo\wwwroot\lib\jquery\dist\jquery.min.js"></script>

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Kayıt Ol</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				<form asp-controller="Register" asp-action="Index" method="post">
					<div class="form-row">
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Ad Soyad</label>

							<input type="text" class="form-control" id="validationDefault01" asp-for="WriterName"  placeholder="" required="">
							<span asp-validation-for="WriterName" class="text-danger"></span>
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom02">Email</label>
							<input type="text" class="form-control" id="validationDefault02" asp-for="WriterMail" placeholder="" required="">
							<span asp-validation-for="WriterMail" class="text-danger"></span>
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Password</label>
							<input type="password" class="form-control" id="password1" asp-for="WriterPassword" placeholder="" required="">
							<span asp-validation-for="WriterPassword" class="text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
							<input type="text" class="form-control" asp-for="writerImage" id="password2" placeholder="" required="">
						</div>

					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
					<p>
						<a href="#" id="btn1">Okudum Kabul Ediyorum</a>
					</p>
				</form>

			</div>
		</div>
	</div>

	<script>
		$("#btn1").click(function () {
			Swal("SweetAlert2 is working!");
		});
	</script>
	
</section>