@model Blog
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<!-- head bölümü aynı kalacak -->
<body class="bg-light">
    <div class="container-fluid mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-10">
                <div class="card shadow">
                    <div class="card-header custom-header text-white">
                        <h3 class="mb-0">Blog Düzenle</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="EditBlog" asp-controller="Blog" method="post">
                            <!-- Gizli BlogId alanı -->
                            <input type="hidden" name="BlogId" value="@Model.BlogId" />

                            <div class="mb-3">
                                <label for="blogTitle" class="form-label">Blog Başlığı</label>
                                <input type="text" class="form-control" id="blogTitle" value="@Model.BlogTitle" name="BlogTitle">
                            </div>

                            <div class="mb-3">
                                <label for="blogImage" class="form-label">Blog Image</label>
                                <input type="text" class="form-control" id="blogImage" value="@Model.BlogImage" name="BlogImage">
                            </div>

                            <div class="mb-3">
                                <label for="thumbnailImage" class="form-label">Blog Thumbnail Image</label>
                                <input type="text" class="form-control" id="thumbnailImage" value="@Model.BlogThumbnailImage" name="BlogThumbnailImage">
                            </div>

                            <div class="mb-3">
                                <label for="blogContent" class="form-label">Blog Content</label>
                                <textarea class="form-control" id="blogContent" name="BlogContent" rows="6">@Model.BlogContent</textarea>
                            </div>

                            <div class="mb-3">
                                <label for="category" class="form-label">Category</label>
                                <select name="CategoryId" class="form-select" id="category">
                                    <option value="">Seçiniz</option>
                                    @foreach (var item in ViewBag.Categories)
                                    {
                                        @if (Model.CategoryId.ToString() == item.Value)
                                        {
                                            <option value="@item.Value" selected>@item.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-custom-blue btn-success">Güncelle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>