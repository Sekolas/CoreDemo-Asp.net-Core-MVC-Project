@model Mesajlar

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mesaj Detay Sayfası</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h2 class="card-title mb-0">Mesaj Detay Sayfası</h2>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-4">
                                <label for="messageId" class="form-label text-muted">Mesaj ID</label>
                                <input type="text" class="form-control" id="messageId" value="@Model.MessageID" readonly>
                            </div>

                            <div class="mb-4">
                                <label for="subject" class="form-label text-muted">Mesaj Başlığı</label>
                                <input type="text" class="form-control" id="subject" value="@Model.Subject" readonly>
                            </div>

                            <div class="mb-4">
                                <label for="messageDetails" class="form-label text-muted">Mesaj İçeriği</label>
                                <textarea class="form-control" id="messageDetails" rows="5" readonly>@Model.MessageDetails</textarea>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                                <button type="button" class="btn btn-info text-white px-4">
                                    Mesajlara Dön
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
